extends layout

block content

  form(action='./addTask' method='POST' class='form-registration')
    div(class='row my-3')
        div(class='col-md-2 align-bottom')
          label(for="taskName" class='fs-5') Name
        div(class='col-md-8')
          input(class="form-control form-control-sm" type="text" name='taskName', placeholder="Enter new product" )
        div(class='col-md-2 text-end')
          button(class='btn btn-success btn-sm' type='submit') Add new product


  h5(class='my-2') List of Products

  div(class='row mb-3 border-bottom border-3')
    div(class='col-md-6 fw-bold') productName
    div(class='col-md-2 fw-bold') dateCreated
    div(class='col-md-4 fw-bold') Action

  each task in currentTasks
    div(class='row mb-2')
      div(class='col-sm-6') #{task.taskName}
      div(class='col-sm-2') #{format(task.createDate, "yyyy-MM-dd")}
      div(class='col-sm-2')
        form(action='./deleteTask' method='POST' class='form-registration')
          input(type='hidden' name='_id' value=`${task._id}`)
          button(class='btn btn-danger btn-xs mx-1') remove
